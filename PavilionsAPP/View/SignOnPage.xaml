<UserControl x:Class="PavilionsAPP.View.SignOnPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PavilionsAPP.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid Background="White">
            <Grid VerticalAlignment="Center" HorizontalAlignment="Center" 
                   Height="290" 
                  Background="#FFE9E9E9">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Grid.Row="0" 
                       Content="Логин:" 
                       HorizontalAlignment="Right" VerticalAlignment="Top" 
                       FontSize="22" Margin="0"
                       />
                
                <Label Grid.Column="0" Grid.Row="1" 
                       Content="Пароль:" 
                       HorizontalAlignment="Right" VerticalAlignment="Top" 
                       FontSize="22" Margin="0" 
                       />

                <Label Grid.Column="0" Grid.Row="2"
                       Content="Повторите пароль:" 
                       HorizontalAlignment="Right" VerticalAlignment="Top" 
                       FontSize="22" Margin="0" 
                       />


                <TextBox x:Name="inpLogin" 
                         Grid.Column="1" Grid.Row="0"
                         Text="{Binding Path=Login}"
                         VerticalAlignment="Center"
                         TextWrapping="Wrap" FontSize="18"
                         />
                
                <TextBox Grid.Column="1" Grid.Row="1"
                         Text="{Binding Path=Password}"
                         VerticalAlignment="Center"
                         TextWrapping="Wrap" FontSize="18"
                         />

                <TextBox Grid.Column="1" Grid.Row="2"
                         Text="{Binding Path=RepPassword}"
                         VerticalAlignment="Center"
                         TextWrapping="Wrap" FontSize="18"
                         />

                <TextBox Grid.Column="1" Grid.Row="3"
                         Text="{Binding Path=UserName}"
                         VerticalAlignment="Center"
                         TextWrapping="Wrap" FontSize="18"
                         />

                <TextBox Grid.Column="1" Grid.Row="1"
                         Text="{Binding Path=Password}"
                         VerticalAlignment="Center"
                         TextWrapping="Wrap" FontSize="18"
                         />

                <TextBox Grid.Column="1" Grid.Row="4"
                         Text="{Binding Path=UserSurname}"
                         VerticalAlignment="Center"
                         TextWrapping="Wrap" FontSize="18"
                         />

                <TextBox Grid.Column="1" Grid.Row="5"
                         Text="{Binding Path=UserLastName}"
                         VerticalAlignment="Center"
                         TextWrapping="Wrap" FontSize="18"
                         />

                <Label Grid.Column="0" Grid.Row="3" 
                       Content="Имя:" 
                       HorizontalAlignment="Right" VerticalAlignment="Top" 
                       FontSize="22" Margin="0" />
                
                <Label Grid.Column="0" Grid.Row="4" 
                       Content="Фамилия" 
                       HorizontalAlignment="Right" VerticalAlignment="Top" 
                       FontSize="22" Margin="0" 
                       />
                
                <Label Grid.Column="0" Grid.Row="5" 
                       Content="Отчество:"
                       HorizontalAlignment="Right" VerticalAlignment="Top" 
                       FontSize="22" 
                       />
                
                
                <Image x:Name="userPhoto" Grid.Column="2" Grid.RowSpan="5" 
                       HorizontalAlignment="Left" VerticalAlignment="Top"
                       Height="200" Width="200" Margin="5,0"
                       />

                <Button x:Name="btnLoadPhoto" 
                        Grid.Column="2" Grid.Row="4" 
                        Content="Загрузить фото"
                        HorizontalAlignment="Center" VerticalAlignment="Center" 
                        FontSize="22" Margin="5"
                        Command="{Binding LoadPhoto}"
                        />

            </Grid>
            
            <Button x:Name="btnRegister" 
                    Content="Зарегистрироваться" 
                    HorizontalAlignment="Center" VerticalAlignment="Center" 
                    Padding="5" FontSize="22" Margin="0,350,0,0" 
                    Command="{Binding TryRegister}"/>


        </Grid>
    </Grid>
</UserControl>
